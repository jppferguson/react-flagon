{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./lib/",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "./src/"
  ]
}